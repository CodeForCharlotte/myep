<!DOCTYPE html>
<html lang="en-us" class="no-js">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MYEP</title>
    <!-- STYLES -->
    <link rel="stylesheet" href='@Href("~/Content/themes/base/jquery.ui.all.css")'>
    <link rel="stylesheet" href='@Href("~/Content/bootstrap/bootstrap.min.css")'>
    <link rel="stylesheet" href='@Href("~/Content/themes/validationEngine.jquery.css")'>
    <link rel="stylesheet" href='@Href("~/Content/site.css")'>
    <!-- SCRIPTS -->
    <script type="text/javascript" src='@Href("~/Content/scripts/modernizr-2.6.2.min.js")'></script>
    <script type="text/javascript" src='@Href("~/Content/scripts/jquery-1.10.2.min.js")'></script>
    <script type="text/javascript" src='@Href("~/Content/scripts/jquery-ui-1.10.3.min.js")'></script>
    <script type="text/javascript" src='@Href("~/Content/bootstrap/bootstrap.min.js")'></script>
    <script type="text/javascript" src='@Href("~/Content/scripts/jquery.validate.min.js")'></script>
    <script type="text/javascript" src='@Href("~/Content/scripts/jquery.validate.unobtrusive.min.js")'></script>
    <script type="text/javascript" src='@Href("~/Content/scripts/jquery.validate.inline.js")'></script>
    <script type="text/javascript" src='@Href("~/Content/site.js")'></script>
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script type="text/javascript" src='@Href("~/Content/scripts/html5shim.min.js")'></script>
        <script type="text/javascript" src='@Href("~/Content/scripts/respond.min.js")'></script>
    <![endif]-->
</head>
<body>
    <header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">MYEP</a>
            </div>
            <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        <li><a href="/interns">Interns</a></li>
                        <li><a href="/users">Users</a></li>
                        <li><a href="/codes">Codes</a></li>
                    }
                </ul>
            </nav>
        </div>
    </header>
    <div id="content" class="bs-header">
        <div class="container">
            <h1>@ViewBag.Title</h1>
            @RenderBody()
        </div>
    </div>
    <footer id="footer" class="navbar navbar-fixed-bottom">
        <div class="container">
            @if (Request.IsAuthenticated)
            {
                <div><a href="/home/logout">Logout @User.Identity.Name</a></div>
            }
        </div>
    </footer>
</body>
</html>
