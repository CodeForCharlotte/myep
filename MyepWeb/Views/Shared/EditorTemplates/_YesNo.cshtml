@model bool?
@{
    var dict = new Dictionary<string, string> {
        {Boolean.TrueString, "Yes"},
        {Boolean.FalseString, "No"},
    };

    var value = !Model.HasValue ? string.Empty
                : Model.Value ? bool.TrueString
                : bool.FalseString;

    var attrs = (IDictionary<string, object>)ViewData["htmlAttributes"];
    attrs.RemoveClass("form-control").AddClass("radio-inline");
    var list = dict.ToSelectList(false, value);
}
@Html.RadioList("", list, null, attrs)